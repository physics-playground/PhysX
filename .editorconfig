# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[*.{json,yml,yaml}]
indent_size = 2

[*.{mdx,md,markdown}]
indent_size = 1

[{*.cmake,CMakeLists.txt}]
indent_style = tab
indent_size = 4
